---
import { Image } from "astro:assets";

import Linkedin_logo_blue from "../../assets/icons/linkedin_logo_blue.svg";
import map_blue from "../../assets/icons/map-blue.svg";
import phone_blue from "../../assets/icons/phone-blue.svg";
import mail_blue from "../../assets/icons/mail-blue.svg";
import map_screen from "../../assets/images/map_screen.jpg"
import Button from "../Button.astro";
---

