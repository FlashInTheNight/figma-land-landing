    <div class="contact-us__contact">
      <p class="contact-us__contact__item">
        <Image
          class="contact-us__contact__item__icon"
          src={map_blue}
          alt="bx_map"
        />
        <span class="contact-us__contact__item__descr mobile"
          >7480 Mockingbird Hill undefined</span
        >
        <span class="contact-us__contact__item__descr desktop">6386 Spring St undefined Anchorage, Georgia 12473 United States</span>
      </p>
      <p class="contact-us__contact__item">
        <Image
          class="contact-us__contact__item__icon"
          src={phone_blue}
          alt="bx_map"
        />
        <span class="contact-us__contact__item__descr">(843) 555-0130</span>
      </p>
      <p class="contact-us__contact__item">
        <Image
          class="contact-us__contact__item__icon"
          src={mail_blue}
          alt="bx_map"
        />
        <span class="contact-us__contact__item__descr"
          >willie.jennings@example.com
        </span>
      </p>
    </div>

    <form class="contact-us__form" action="#" method="post">
      <h3 class="contact-us__form__title">Contact Us</h3>
      <input
        class="contact-us__form__input"
        type="text"
        placeholder="Your Name"
      />
      <input
        class="contact-us__form__input"
        type="email"
        placeholder="Your Email"
      />
      <textarea class="contact-us__form__textarea" placeholder="Your Message"
      ></textarea>
      <Button type="submit" text="Send" class="button-wight" />
    </form>
    <Image class="contact-us__map" src={map_screen} alt="map_screen" />
  </div>
</section>

<style>
  .contact-us {
    margin-top: var(--section-top);
    padding-bottom: 150px;
  }
  .title {
    font-weight: 400;
    font-size: 48px;
    line-height: 115%;
    letter-spacing: 0em;
    text-align: center;
  }
  .subtitle {
    margin-top: 17px;
    font-weight: 400;
    font-size: 28px;
    line-height: 143%;
    letter-spacing: 0.01em;
    text-align: center;
    color: var(--second-text);
  }
  .subtitle__span {
    display: none;
  }
  .contact-us__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 50px;
    margin-top: 50px;
  }

  .contact-us__social {
    padding: 10px;
    display: flex;
    column-gap: 24px;
    width: 200px;
  }

  .contact-us__social__link__svg {
    transition: color 0.2s;
  }
  .contact-us__social__link:hover .contact-us__social__link__svg {
    fill: var(--primary-focus);
  }

  .contact-us__contact {
    display: flex;
    flex-direction: column;
    row-gap: 10px;
  }
  .contact-us__contact__item__icon {
    width: 30px;
  }

  .contact-us__contact__item {
    display: flex;
    align-items: center;
    column-gap: 10px;
  }
  .contact-us__contact__item__descr {
    font-family: var(--font-family);
    font-weight: 400;
    font-size: 16px;
    line-height: 144%;
    letter-spacing: 0.01em;
    color: var(--second-text);
  }

  .contact-us__form {
    display: flex;
    flex-direction: column;
    row-gap: 45px;
    border: 1px solid #ddd;
    border-radius: 20px;
    padding: 52px 30px;
    max-width: 378px;
    /* height: 669px; */
    box-shadow: 0 13px 19px 0 rgba(0, 0, 0, 0.07);
    background: var(--light-text);
  }

  .contact-us__form__title {
    font-weight: 700;
    font-size: 20px;
    line-height: 140%;
    letter-spacing: 0.01em;
    align-self: center;
  }
  .contact-us__form__input {
    border: 1px solid #e8e8e8;
    border-radius: 39px;
    padding: 19px 20px;
    width: 280px;
    height: 54px;
    background: #f5f5f5;
  }
  .contact-us__form__textarea {
    border: 1px solid #e8e8e8;
    padding: 23px 20px;
    width: 280px;
    height: 193px;
    background: #f5f5f5;
  }
  .contact-us__form__input::placeholder,
  .contact-us__form__textarea::placeholder {
    font-family: "Roboto";
    font-weight: 400;
    font-size: 15px;
    line-height: 107%;
    letter-spacing: 0.01em;
    color: #18171d;
  }

  .button-wight {
    width: 145px;
  }

  .contact-us__map {
    display: none;
  }

  .contact-us__contact__item__descr.desktop {
    display: none;
  }

  .contact-us__contact__item__descr.mobile {
    display: block;
  }

  @media (min-width: 1024px) {
  .subtitle__span {
    display: block;
  }

  .contact-us__content {
    display: grid;
    grid-template-columns: 380px 1fr;
    grid-template-rows: repeat(3, max-content);
    grid-column-gap: 40px;
    grid-row-gap: 0px;
  }

  
  .contact-us__contact__item__descr {
    max-width: 280px;
    text-align: center;
  }
  .contact-us__form {
    grid-area: 1 / 1 / 4 / 2;
  }
  .contact-us__map {
    display: block;
    grid-area: 2 / 2 / 3 / 3;
    justify-self: center;
  }

  .contact-us__social {
    grid-area: 3 / 2 / 4 / 3;
  }
  .contact-us__contact {
    grid-area: 1 / 2 / 2 / 3;
    flex-direction: row;
    column-gap: 15px;
  }

  .contact-us__contact__item__icon {
    height: 60px;
  }

  .contact-us__contact__item {
    flex-direction: column;
  }

  .contact-us__contact__item__descr.mobile {
    display: none;
  }

  .contact-us__contact__item__descr.desktop {
    display: block;
  }
</style>
