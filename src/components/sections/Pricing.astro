---
import Button from "../Button.astro";
import Container from "../Container.astro";
---

<section id="pricing" class="pricing">
  <Container>
    <h2 class="title">Pricing</h2>
    <p class="subtitle">Most calendars are designed for teams. <span class="subtitle__span">Slate is designed for freelancers</span></p>
    <div class="pricing__content">
      <!-- 1 -->
      <div class="pricing__item">
        <div class="pricing__item__header">
          <h3 class="pricing__item__title">Free</h3>
          <p class="pricing__item__subtitle">
            Organize across all apps by hand
          </p>
        </div>
        <div class="pricing__item__price">
          <p class="pricing__item__price__number">0</p>
          <div class="pricing__item__price__currency">
            <span class="pricing__item__price__currency__symbol">$</span>
            <p class="pricing__item__price__currency__per">Per Month</p>
          </div>
        </div>
        <div class="pricing__item__features">
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
        </div>
        <Button text="Order Now" class="button-wight" />
      </div>
      <!-- 2 -->
      <div class="pricing__item primary-item scale">
        <div class="pricing__item__header">
          <h3 class="pricing__item__title white-color">Standard</h3>
          <p class="pricing__item__subtitle white-color">
            Organize across all apps by hand
          </p>
        </div>
        <div class="pricing__item__price">
          <p class="pricing__item__price__number">10</p>
          <div class="pricing__item__price__currency">
            <span class="pricing__item__price__currency__symbol">$</span>
            <p class="pricing__item__price__currency__per">Per Month</p>
          </div>
        </div>
        <div class="pricing__item__features">
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
        </div>
        <Button text="Order Now" class="button-wight button-bg-white" />
      </div>
      <!-- 3 -->
      <div class="pricing__item">
        <div class="pricing__item__header">
          <h3 class="pricing__item__title">BUSINESS</h3>
          <p class="pricing__item__subtitle">
            Organize across all apps by hand
          </p>
        </div>
        <div class="pricing__item__price">
          <p class="pricing__item__price__number">99</p>
          <div class="pricing__item__price__currency">
            <span class="pricing__item__price__currency__symbol">$</span>
            <p class="pricing__item__price__currency__per">Per Month</p>
          </div>
        </div>
        <div class="pricing__item__features">
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
          <p class="pricing__item__feature__item">Pricing Feature</p>
        </div>
        <Button text="Order Now" class="button-wight" />
      </div>
    </div>
  </Container>
</section>

<style>
  .pricing {
    padding-top: var(--section-top);
    background-color: var(--text);
    padding-bottom: 100px;
  }

  .title {
    font-weight: 400;
    font-size: 48px;
    line-height: 115%;
    letter-spacing: 0em;
    text-align: center;
    color: var(--light-text);
  }

  .subtitle {
    font-weight: 400;
    font-size: 28px;
    line-height: 143%;
    letter-spacing: 0.01em;
    text-align: center;
    color: var(--light-text);
    margin-top: 17px;
  }
  .subtitle__span {
    display: none;
  }

  .pricing__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 50px;
    margin-top: 80px;
    padding: 10px 0 10px 0;
  }

  .pricing__item {
    padding: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 30px;
    width: 335px;
    box-shadow: 0 13px 19px 0 rgba(0, 0, 0, 0.07);
    background: var(--light-text);
    border: 1px solid #dedede;
    border-radius: 10px;

    &.primary-item {
      border: none;
      background-color: var(--primary);
      color: var(--light-text);
    }
  }

  .pricing__item__header {
    width: 150px;
  }

  .pricing__item__title {
    font-weight: 700;
    text-transform: uppercase;
    font-size: 20px;
    line-height: 140%;
    letter-spacing: 0.01em;
    color: var(--text);
    text-align: center;
  }

  .pricing__item__subtitle {
    font-weight: 400;
    font-size: 16px;
    line-height: 144%;
    letter-spacing: 0.01em;
    text-align: center;
    color: var(--second-text);
  }

  .pricing__item__price {
    display: flex;
    column-gap: 10px;
  }

  .pricing__item__price__number {
    font-weight: 700;
    font-size: 74px;
    line-height: 114%;
    letter-spacing: 0em;
  }

  .pricing__item__price__currency {
    display: flex;
    flex-direction: column;
    align-self: center;
  }

  .pricing__item__price__currency__symbol {
    font-weight: 700;
    font-size: 20px;
    line-height: 140%;
    letter-spacing: 0.01em;
  }

  .pricing__item__price__currency__per {
    font-weight: 400;
    font-size: 16px;
    line-height: 144%;
    letter-spacing: 0.01em;
  }

  .pricing__item__features {
    display: flex;
    flex-direction: column;
    row-gap: 10px;
  }

  .pricing__item__feature__item {
    font-weight: 400;
    font-size: 15px;
    line-height: 187%;
    letter-spacing: 0.01em;
    padding: 10px;
  }

  .button-wight {
    width: 255px;
  }

  .button-bg-white {
    background-color: #fff;
    color: var(--primary);
  }
  .button-bg-white:hover {
    color: #fff;
  }

  .white-color {
    color: var(--light-text);
  }

  @media (min-width: 1024px) {
    .pricing__content {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      column-gap: 50px;
    }
    .scale {
      transform: scale(1.1);
    }
    .subtitle__span {
    display: block;
  }

  }
</style>
